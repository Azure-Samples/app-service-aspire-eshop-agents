{
    "openapi": "3.0.4",
    "info": {
        "title": "Fashion Store Cart API",
        "description": "API for managing fashion store shopping cart operations",
        "version": "v1"
    },
    "servers": [
        {
            "url": "<APP-SERVICE-URL>"
        }
    ],
    "paths": {
        "/api/Cart": {
            "get": {
                "tags": [
                    "Cart"
                ],
                "operationId": "getCartSummary",
                "summary": "Gets all items in the shopping cart along with the total cost",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CartSummary"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Cart"
                ],
                "operationId": "clearCart",
                "summary": "Clears all items from the cart",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CartSummary"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Cart/add": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "operationId": "addToCart",
                "summary": "Adds an item to the shopping cart",
                "requestBody": {
                    "description": "The item to add to the cart",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AddToCartRequest"
                            }
                        },
                        "text/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AddToCartRequest"
                            }
                        },
                        "application/*+json": {
                            "schema": {
                                "$ref": "#/components/schemas/AddToCartRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CartSummary"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProblemDetails"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Cart/{productId}/size/{size}": {
            "put": {
                "tags": [
                    "Cart"
                ],
                "operationId": "updateCartItemQuantity",
                "summary": "Updates the quantity of an item in the cart",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "The product ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    },
                    {
                        "name": "size",
                        "in": "path",
                        "description": "The product size",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "The update quantity request",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateQuantityRequest"
                            }
                        },
                        "text/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateQuantityRequest"
                            }
                        },
                        "application/*+json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateQuantityRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CartSummary"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProblemDetails"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProblemDetails"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Cart"
                ],
                "operationId": "removeCartItem",
                "summary": "Removes an item from the cart",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "The product ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    },
                    {
                        "name": "size",
                        "in": "path",
                        "description": "The product size",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CartSummary"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProblemDetails"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "AddToCartRequest": {
                "required": [
                    "size"
                ],
                "type": "object",
                "properties": {
                    "productId": {
                        "type": "integer",
                        "description": "The product ID to add to the cart",
                        "format": "int32"
                    },
                    "size": {
                        "type": "string",
                        "description": "The size of the product (e.g., XS, S, M, L, XL, XXL, XXXL)",
                        "nullable": true
                    },
                    "quantity": {
                        "type": "integer",
                        "description": "The quantity to add",
                        "format": "int32"
                    }
                },
                "additionalProperties": false
            },
            "CartItem": {
                "required": [
                    "productName",
                    "size"
                ],
                "type": "object",
                "properties": {
                    "productId": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "productName": {
                        "type": "string",
                        "nullable": true
                    },
                    "size": {
                        "type": "string",
                        "nullable": true
                    },
                    "quantity": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "price": {
                        "type": "number",
                        "format": "double"
                    }
                },
                "additionalProperties": false
            },
            "CartSummary": {
                "type": "object",
                "properties": {
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/CartItem"
                        },
                        "nullable": true
                    },
                    "totalCost": {
                        "type": "number",
                        "format": "double"
                    }
                },
                "additionalProperties": false
            },
            "ProblemDetails": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "nullable": true
                    },
                    "title": {
                        "type": "string",
                        "nullable": true
                    },
                    "status": {
                        "type": "integer",
                        "format": "int32",
                        "nullable": true
                    },
                    "detail": {
                        "type": "string",
                        "nullable": true
                    },
                    "instance": {
                        "type": "string",
                        "nullable": true
                    }
                },
                "additionalProperties": {}
            },
            "UpdateQuantityRequest": {
                "type": "object",
                "properties": {
                    "quantity": {
                        "type": "integer",
                        "description": "The new quantity for the cart item",
                        "format": "int32"
                    }
                },
                "additionalProperties": false
            }
        }
    }
}